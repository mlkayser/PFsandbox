<apex:page showHeader="false" title="{!$Label.site.forgot_password_confirmation}">
<apex:stylesheet value="{! URLFOR($Resource.CommunityAssets, '/css/custom-bootstrap.min.css')}"/>
<apex:stylesheet value="{! URLFOR($Resource.CommunityAssets, '/css/font-awesome.min.css')}"/>

<style>
/*Planet Fitness Font - Rockwell*/
@font-face {
    font-family: 'Rockwell';
    src: url('/resource/CommunityAssets/fonts/Rockwell.eot');
    src: url('/resource/CommunityAssets/fonts/Rockwell.eot?#iefix') format('embedded-opentype'), url('/resource/CommunityAssets/fonts/Rockwell.woff') format('woff'), url('/resource/CommunityAssets/fonts/Rockwell.ttf') format('truetype'), url('/resource/CommunityAssets/fonts/Rockwell.svg#Rockwell') format('svg');
}
html{
    background: #952d98 url("/resource/CommunityAssets/img/login-bg.jpg") no-repeat center center;
    background-size: cover;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    height: 100%;
}
body{
    background-color: transparent;
}
.form-container{
    margin-top: 10%;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 20px;
    max-width: 400px;
    background-color: #eee;
    font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
    padding: 30px;
}
.form-container img{
    width: 130px;
    margin-bottom: 25px;
}
.form-container h2{
    text-align: center;
    font-size: 24px;
    color: #952d98;
    font-weight: bold;
    display: block;
    font-family: Rockwell, 'Courier Bold', Courier, Georgia, Times, 'Times New Roman', serif;
    letter-spacing: 1px;

}
input[type="text"] {
    width: 150px;
    display: block;
    margin-bottom: 10px;
    background-color: yellow;
}
label.checkbox{
    margin-left: 40px;
}
.checkbox span{
    line-height: 24px;
}
.no-sf-style .form-control{
    width: 100%;
    margin: 0 auto;
    position: relative;
    font-size: 16px;
    height: auto;
    padding: 10px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.un{
    background-color: #f3f5f6;
    max-width: 280px;
    margin: 0 auto;
}
.pw{
    background-color: #f3f5f6;
    max-width: 280px;
    margin: 0 auto;
}
.login-logo{
    margin: 0 auto;
    display: block;
}
.forgot-password{
    text-align: center;
}
.forgot-password a{
    margin-top: 10px;
    margin-bottom: 10px;
    text-decoration: none;
    color: #952d98;
    font-weight: 400;
    font-size: 12px;
    margin: 10px;
    text-align: center;
}
.forgot-password a:hover{
    color: #702070;
}
.no-sf-style .btn {
    font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
    display: block;
    padding: 6px 12px;
    font-size: 20px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 16px;
    color: #fff;
    background-color: #952d98;
    max-width: 280px;
}
.no-sf-style .btn:hover{
    background-color: #702070;
    color: #fff;
}
.copyright{
    color: #fff;
    font-size: 12px;
    font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
}
.remember-me{
    color: #5a5b5d;
    padding-left: 10px;
    font-size: 12px;
}
.forgot-password{
    margin: 20px 5px 0;
}
.no-sf-style label {
    display: block;
    max-width: 100%;
    margin-bottom: 5px;
    margin-top: 20px;
    font-weight: 700;
    font-size: 20px;
    font-family: Rockwell, 'Courier Bold', Courier, Georgia, Times, 'Times New Roman', serif;
    letter-spacing: 1px;
}

.no-sf-style .btn.active.focus, .no-sf-style .btn.active:focus, .no-sf-style .btn.focus, .no-sf-style .btn:active.focus, .no-sf-style .btn:active:focus, .no-sf-style .btn:focus {
    color: #ffffff;
}

</style>
<div class="no-sf-style">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <apex:form >
                    <fieldset>
                        <div class="form-container">
                            <div class="error-messages">
                                <apex:pageMessages id="error"/>
                            </div>
                            <img class="login-logo" src="/resource/CommunityAssets/img/planet-fitness-logo.png" alt="Planet Fitness"/>
                            <h2>franchise relationship management</h2>
                            An email has been sent to you with your temporary password.  Please follow the link in your email to complete the password reset process.<br/>
                            <br/>
                            <div class="forgot-password">
                                <apex:outputLink value="{!$Page.PFCommunityLogin}">Return to Login Page</apex:outputLink>
                            </div>
                        </div>
                    </fieldset>
                </apex:form>
            </div>
        </div>
        <p class="copyright text-center">Copyright &copy; 2016, Planet Fitness</p>
    </div>
</div>

</apex:page>